{% extends "::base.html.twig"%}
{% block contenido%}
<body background="{{ asset('images/triangleDown.jpg') }}" class="mifondo">
	<form method="POST">
    <row class="col-xs-12">
      {% include 'FrontEndBundle:Widgets:WidgetTableEmpleados.html.twig' with {
        'cabeceras': datos.empleadoTabla.cabeceras,
        'filas': datos.empleadoTabla.filas} %}
    <div class="col-xs-4">
      {% include 'FrontEndBundle:Widgets:WidgetBajaEmpleados.html.twig' with {
        'baja': datos.baja.valor} %}
    </div>
    <div class="col-xs-4">
      {% include 'FrontEndBundle:Widgets:WidgetActivoEmpleados.html.twig' with {
        'activo': datos.activo.valor} %}
    </div>
    <div class="col-xs-4">
      {% include 'FrontEndBundle:Widgets:WidgetVacacionesEmpleados.html.twig' with {
        'vacaciones': datos.vacaciones.valor} %}
    </div>
  </row>
</form>
<script type="text/javascript">
  $(document).ready(function(){
    $('#tablaEmpleados').DataTable({
      "language": {
        "url" : "{{asset('js/DataTableSpanish.json')}}"
      }
    });
  });
</script>
{% endblock %}